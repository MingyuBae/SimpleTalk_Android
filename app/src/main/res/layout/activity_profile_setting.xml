<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.ac.hansung.simpletalk.android.setting.ProfileSettingActivity">

    <TextView
        android:text="이름"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/profileEditNameText"
        android:layout_alignBottom="@+id/profileEditNameEditText"
        android:gravity="right|center_vertical"
        android:includeFontPadding="false"
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_alignRight="@+id/profileEditStatText"
        android:layout_alignEnd="@+id/profileEditStatText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/profileEditNameEditText" />

    <TextView
        android:text="상태"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileEditStatText"
        android:padding="10dp"
        android:gravity="right|center_vertical"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/profileEditStatEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/profileEditButton"
        android:layout_toStartOf="@+id/profileEditButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/profileEditStatEditText"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/profileEditNameEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="확인"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="154dp"
        android:id="@+id/profileEditButton" />
</RelativeLayout>
