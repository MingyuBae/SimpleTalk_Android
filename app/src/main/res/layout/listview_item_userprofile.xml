<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_height="60dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/userProfileImage"
        android:layout_width="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/userProfileStatusMsg"
        android:layout_alignBottom="@+id/userProfileImage"
        android:layout_toRightOf="@+id/userProfileImage"
        android:layout_toEndOf="@+id/userProfileImage" />

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:id="@+id/userProfileName"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:layout_width="280dp"
        android:layout_alignBaseline="@+id/userProfileCheckbox"
        android:layout_alignBottom="@+id/userProfileCheckbox"
        android:layout_toRightOf="@+id/userProfileImage"
        android:layout_toEndOf="@+id/userProfileImage" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userProfileCheckbox"
        android:layout_above="@+id/userProfileStatusMsg"
        android:layout_toRightOf="@+id/userProfileStatusMsg"
        android:layout_toEndOf="@+id/userProfileStatusMsg" />

</RelativeLayout>